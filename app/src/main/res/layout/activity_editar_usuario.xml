<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarUsuarioActivity">

    <!-- Campo Rut -->


    <EditText
        android:id="@+id/etEditarRut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Ingrese el Rut"
        android:inputType="text" />


    <EditText
        android:id="@+id/etEditarNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditarRut"
        android:layout_marginTop="8dp"
        android:hint="Ingrese el Nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/etEditarApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditarNombre"
        android:layout_marginTop="8dp"
        android:hint="Ingrese el Apellido"
        android:inputType="text" />


    <EditText
        android:id="@+id/etEditarEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditarApellido"
        android:layout_marginTop="8dp"
        android:hint="Ingrese la Edad"
        android:inputType="number" />


    <EditText
        android:id="@+id/etEditarTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditarEdad"
        android:layout_marginTop="8dp"
        android:hint="Ingrese el Teléfono"
        android:inputType="phone" />


    <EditText
        android:id="@+id/etEditarFechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditarTelefono"
        android:layout_marginTop="8dp"
        android:hint="Ingrese la Fecha de Nacimiento"
        android:inputType="date" />


    <CheckBox
        android:id="@+id/cbEditarTieneHijos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditarFechaNacimiento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="¿Tiene Hijos?" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbEditarTieneHijos"
        android:layout_marginTop="16dp"
        android:text="Guardar Cambios" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnActualizar"
        android:layout_marginTop="16dp"
        android:onClick="IrActivityVer"
        android:text="Regresar" />



</RelativeLayout>
